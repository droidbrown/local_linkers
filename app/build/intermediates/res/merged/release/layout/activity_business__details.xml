<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hbs.hashbrownsys.locallinkers.Business_Details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#841633">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txt_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Career Institute"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            />

        <com.hbs.hashbrownsys.locallinkers.CirclePageIndicator
            android:id="@+id/indicator"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp" />

    </LinearLayout>


    <!--<ImageView-->
        <!--android:id="@+id/image"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="150dp"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/businessimg" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:singleLine="true"
            android:text="Career Institute"
            android:textColor="#841633"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="2dp"
            android:background="#2c2c2c" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_buser"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:singleLine="true"
            android:text="Khushi Rai"
            android:textColor="#2a2a2a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_bphone"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:padding="5dp"
            android:text="+8195905341"
            android:textColor="#2a2a2a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_bhome"
            android:drawablePadding="5dp"
            android:singleLine="true"
            android:padding="5dp"
            android:text="scf 35,Sec 60,Chandigarh(160036)"
            android:textColor="#2a2a2a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_bsend"
            android:drawablePadding="5dp"
            android:text="10km"
            android:visibility="gone"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="#2a2a2a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:maxLines="3"
            android:text="Lorem Ipsum is simply dumy text of printing and typesetting industry."
            android:textColor="#2a2a2a"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_book_now"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="#841633"
            android:inputType="textFilter"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#fff"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>
