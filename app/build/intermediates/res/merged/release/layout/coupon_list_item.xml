<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="120dp"

            android:layout_height="100dp">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_coupon_img" />


        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="KFC Burger Como Pack"
                    android:textColor="#841633"
                    android:textSize="15sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_title"
                android:layout_marginTop="2dp"
                android:text="SCO-1709"
                android:textColor="#5f5f5f"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:maxLines="3"
                android:text="Lorem Ipsum is simply dumy text of printing and typesetting industry."
                android:textColor="#5f5f5f"
                android:textSize="12sp"
                android:visibility="gone" />


            <FrameLayout
                android:id="@+id/ll_textcut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_des">

                <TextView
                    android:id="@+id/txt_cut"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"


                    android:drawableLeft="@drawable/ic_cutline"
                    android:singleLine="true" />


                <LinearLayout
                    android:id="@+id/llDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom|right"
                    android:background="#FFFFFF"
                    android:elevation="7dp"
                    android:orientation="horizontal"
                    android:padding="3dp">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:padding="3dp"
                        android:src="@drawable/distance" />


                    <TextView
                        android:id="@+id/txtdistance"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center_vertical|right"

                        android:text="Km"

                        android:textAlignment="gravity"
                        android:textColor="#841633"
                        android:textSize="12sp" />


                </LinearLayout>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_textcut"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value Rs."
                        android:textColor="#2a2a2a"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="0.5"
                        android:text="Rs.90"
                        android:textColor="#2a2a2a"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Rs."
                        android:textColor="#2a2a2a"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/txt_price_save_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:textColor="#841633"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_price_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer Price:"
                        android:textColor="#2a2a2a"
                        android:textSize="10sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_price_offer_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="Rs.70"
                        android:textColor="#841633"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
