<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pading_size"
        android:layout_marginRight="@dimen/pading_size">

        <ImageView
            android:id="@+id/tab_layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/tab_layout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tab_layout_icon"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Coupan"
            android:textColor="#fff"
            android:textSize="@dimen/tab_text" />


        <FrameLayout
            android:id="@+id/tab_iconFL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tab_layout_icon"
            android:visibility="gone">


            <TextView
                android:id="@+id/cartitemcountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cart_item_count_border"
                android:text="1"
                android:padding="2dp"
                android:textColor="@color/white" />

        </FrameLayout>

    </RelativeLayout>
</LinearLayout>