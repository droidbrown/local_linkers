<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_background"
    tools:context="com.hbs.hashbrownsys.locallinkers.Forget">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:layout_below="@+id/back_image"
        android:id="@+id/txt_frget_pswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/header_title"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:text="Forget Password"/>

    <EditText
        android:id="@+id/ed_phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Enter Phone Number"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/ed_phone_text"
        android:maxLength="10"
        android:textColor="#fff"
        android:inputType="phone"
        android:textColorHint="#fff"
        android:padding="20dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_phone"
        />


    <Button
        android:layout_above="@+id/relative_layout"
        android:id="@+id/btn_send_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#841633"
        android:text="Send OTP"
        android:layout_marginBottom="20dp"
        android:inputType="text"
        android:textColor="#fff"
        android:textSize="@dimen/btn_signin"
        />


    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:paddingBottom="10dp"
            android:textSize="@dimen/ed_phone_text"
            android:paddingTop="10dp"
            android:textColor="#CCFFFFFF"
            />

        <TextView
            android:id="@+id/txt_signin"
            android:layout_toRightOf="@+id/txt_already_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:gravity="center"
            android:textSize="@dimen/ed_phone_text"
            android:paddingBottom="10dp"
            android:layout_marginLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#fff"
            />

    </RelativeLayout>


</RelativeLayout>
