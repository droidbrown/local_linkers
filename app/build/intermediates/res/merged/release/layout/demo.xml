<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainCont"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272525"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
       />
    <!--
    <ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/background"
    android:scaleType="centerCrop" />
    -->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/floatregisterusername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/txtUserName"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:maxLines="1"
            android:textColor="#fff"
            android:backgroundTint="#fff"
            android:hint="Username"
            android:imeOptions="actionNext"

            android:textSize="16sp"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floatemail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat"

        android:layout_marginRight="10dp">

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:backgroundTint="#fff"
            android:hint="E-mail Address"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textSize="16sp"
            android:imeOptions="actionNext"

            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/floatpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        app:hintTextAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginRight="10dp">


        <EditText
            android:id="@+id/txtPassword"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:backgroundTint="#fff"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="#fff"
            android:imeOptions="actionDone"
            android:textSize="16sp" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

        <TextView
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_width="wrap_content"
            android:id="@+id/checktext"
            android:layout_marginLeft="20dp"
            android:text="I agree to the terms and condition"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btnsignUp"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:inputType="textFilter"
        android:onClick="show"
        android:text="Sign Up"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:typeface="normal" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/bottomtab"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/rlogin"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:textSize="16sp"
                android:text="Already have an Account"
                android:inputType="textFilter"
                android:textColor="#fff"
                android:typeface="sans" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>






