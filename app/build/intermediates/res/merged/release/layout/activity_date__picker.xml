<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hbs.hashbrownsys.locallinkers.Date_PickerActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#841633">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txt_header_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:maxLength="20"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Dummy Text"
            android:textColor="#fff"
            android:textSize="18sp" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_below="@+id/relative_layout"
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/ed_date"
            android:layout_toRightOf="@+id/txt_date"
            android:layout_width="match_parent"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:background="@drawable/bill_border"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_below="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/ed_time"
            android:layout_toRightOf="@+id/txt_time"
            android:layout_width="match_parent"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:background="@drawable/bill_border"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_height="40dp" />

    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/relative_layout3"
        android:layout_below="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Message"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/ed_message"
            android:layout_toRightOf="@+id/txt_message"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="top"
            android:paddingLeft="5dp"
            android:background="@drawable/bill_border"
            android:inputType="textMultiLine"
            android:layout_centerVertical="true"
            android:layout_height="70dp" />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_submit"
        android:layout_below="@+id/relative_layout3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:background="@drawable/home_text_border"
        android:inputType="text"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
