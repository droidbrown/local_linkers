<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_login_background"
    tools:context="com.hbs.hashbrownsys.locallinkers.Forget">

    <ImageView
        android:id="@+id/back_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_back"
        />

    <TextView
        android:layout_below="@+id/back_image"
        android:id="@+id/txt_reset_pswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/header_title"
        android:layout_marginLeft="20dp"
        android:textColor="#fff"
        android:text="Reset Password"/>

    <EditText
        android:layout_below="@+id/txt_reset_pswrd"
        android:id="@+id/ed_phone"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Enter Phone Number"
        android:textSize="@dimen/ed_phone_text"
        android:maxLength="10"
        android:textColor="#fff"
        android:inputType="phone"
        android:textColorHint="#fff"
        android:padding="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_sign_phone"
        />
    <EditText
        android:layout_below="@+id/ed_phone"
        android:id="@+id/ed_enter_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Enter OTP"
        android:textSize="@dimen/ed_phone_text"
        android:textColor="#fff"
        android:inputType="number"
        android:textColorHint="#fff"
        android:padding="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_sign_password"
        />
    <EditText
        android:layout_below="@+id/ed_enter_otp"
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="New Password"
        android:textSize="@dimen/ed_phone_text"
        android:textColor="#fff"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:padding="15dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_sign_password"
        />
    <EditText
        android:layout_below="@+id/ed_password"
        android:id="@+id/ed_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Confirm New Password"
        android:textSize="@dimen/ed_phone_text"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        android:drawablePadding="20dp"
        android:drawableLeft="@drawable/ic_sign_password"
        />


    <Button
        android:id="@+id/btn_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#841633"
        android:layout_alignParentBottom="true"
        android:text="Set Password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:inputType="text"
        android:textColor="#fff"
        android:textSize="@dimen/btn_signin"
        />



</RelativeLayout>
