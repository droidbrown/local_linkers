<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.hbs.hashbrownsys.locallinkers.Bill_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery Address"
            android:drawablePadding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#8f8989"
            android:gravity="center"
            android:textSize="23px"
            android:drawableLeft="@drawable/delivery_address_icon"
            />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:drawableRight="@drawable/edit"
            android:background="@drawable/bill_border"
            android:layout_marginRight="10dp"
            android:gravity="top"
            android:paddingTop="80dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Address"
            android:layout_gravity="right"
            android:drawablePadding="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="#2a2a2a"
            android:gravity="center"
            android:textSize="23px"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:background="#2a2a2a"
                android:layout_alignParentBottom="true"
                android:layout_height="70dp">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="40px"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:text="Total Rs. 6000"/>

                <Button
                    android:id="@+id/btn_cmplt_purchase"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Proceed to Pay"
                    android:inputType="text"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/forward"
                    android:drawablePadding="10dp"
                    android:textColor="#fff"
                    android:background="@drawable/cart_button_background"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="40dp" />


            </RelativeLayout>



        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
