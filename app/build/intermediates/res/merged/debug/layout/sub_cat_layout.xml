<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginRight="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/pading_size"
        android:layout_marginLeft="@dimen/pading_size"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tab_layout_icon"
            android:layout_width="@dimen/tab_icon"
            android:layout_height="@dimen/tab_icon"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_home"
            />

        <TextView
            android:layout_below="@+id/tab_layout_icon"
            android:id="@+id/tab_layout_txt"
            android:textSize="18sp"
            android:textColor="#841633"
            android:padding="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coupan"/>
    </RelativeLayout>
</LinearLayout>