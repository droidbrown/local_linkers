<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/businessimg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">


            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:textColor="#2a2a2a"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_title"
                android:layout_marginTop="2dp"
                android:drawableLeft="@drawable/ic_buser"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textColor="#2a2a2a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_name"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bphone"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textColor="#2a2a2a"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_phone"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_bhome"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:textColor="#2a2a2a"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txt_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_address"
                android:maxLines="3"
                android:text="Lorem Ipsum is simply dumy text of printing and typesetting industry."
                android:textColor="#2a2a2a"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_des"
                android:layout_marginTop="5dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_bsend"
                    android:drawablePadding="5dp"
                    android:singleLine="true"
                    android:text="distance"
                    android:textColor="#2a2a2a"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btn_book"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txt_distance"
                    android:layout_marginRight="10dp"
                    android:text="More..."
                    android:textColor="#841633"
                    android:textSize="15sp" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
