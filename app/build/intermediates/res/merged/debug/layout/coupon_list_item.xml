<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:src="@drawable/ic_coupon_img"
        android:scaleType="centerCrop"
        android:layout_height="100dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">


        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KFC Burger Como Pack"
            android:textColor="#841633"
            android:singleLine="true"
            android:textSize="15sp"
            />

        <TextView
            android:layout_below="@+id/txt_title"
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCO-1709"
            android:layout_marginTop="2dp"
            android:textColor="#5f5f5f"
            android:textSize="12sp"
            />
        <TextView
            android:layout_below="@+id/txt_address"
            android:id="@+id/txt_des"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum is simply dumy text of printing and typesetting industry."
            android:textColor="#5f5f5f"
            android:maxLines="3"
            android:textSize="12sp"
            />
        <TextView
            android:layout_below="@+id/txt_des"
            android:id="@+id/txt_cut"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_cutline"
            android:singleLine="true"
            />

       <LinearLayout
           android:layout_below="@+id/txt_cut"
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_marginTop="5dp"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txt_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#2a2a2a"
               android:layout_weight="0.5"
               android:layout_gravity="bottom"
               android:textSize="12sp"
               android:text="Rs.90"/>

           <LinearLayout
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="bottom"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txt_price_offer"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#2a2a2a"
                   android:visibility="gone"
                   android:textSize="10sp"
                   android:text="Offer Price:"/>
               <TextView
                   android:id="@+id/txt_price_offer_value"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#841633"
                   android:layout_marginLeft="2dp"
                   android:textSize="12sp"
                   android:text="Rs.70"/>

           </LinearLayout>

           <LinearLayout
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="bottom"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txt_price_save"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#2a2a2a"
                   android:textSize="10sp"
                   android:text="Save:"/>
               <TextView
                   android:id="@+id/txt_price_save_value"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="#841633"
                   android:layout_marginLeft="2dp"
                   android:textSize="12sp"
                   android:text="Rs.20"/>

           </LinearLayout>


       </LinearLayout>

    </RelativeLayout>

    </LinearLayout>


</LinearLayout>
